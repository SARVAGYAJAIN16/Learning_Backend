----------------------------------------todo.model.js------------------------------
import mongoose from 'mongoose';
const todoSchema = new mongoose.Schema(
  {
     content: {
      type: String,
      required: true,
    },
    // if all sub todo complete so it will mark as true.
    complete:{
      type:Boolean,
      default: false
    },

    createdBy: {
      type: mongoose.Schema.Types.ObjectId,
      ref: 'User'
    },

    subTodos:[
      {
        type: mongoose.Schema.Types.ObjectId,
        ref:'SubTodo'
      }
    ] // array of sub-todos

  }, { timestamps: true });
export const Todo = mongoose.model('Todo', todoSchema);
