import mongoose from "mongoose";
const patientSchema = new mongoose.Schema(
  {
    name:{
      type: String,
      required: true
    },
    diagonsedWith:{
      type: String,
      required: true
    },
    address:{
      type: String,
      required: true
    },
    age:{
      type:Number,
      required: true
    },
    bloodGroup:{
      type: String,
      required:true
    },
    gender:{
      type: String,
      enum:["M", "F","O"], // male , female , others
      required: true
    },
    admittedIn:{ // giving hosipital reference (in which you are admitted)
      type: mongoose.Schema.Types.ObjectId,
      ref:"Hospital" 
    }
  }, {timestamp: true});

export const Patient = mongoose.model("Patient",patientSchema);
